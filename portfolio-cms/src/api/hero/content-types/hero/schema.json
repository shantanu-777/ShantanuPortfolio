{
  "kind": "singleType",
  "collectionName": "heroes",
  "info": {
    "singularName": "hero",
    "pluralName": "heroes",
    "displayName": "Hero",
    "description": "Hero section content for homepage"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "bio": {
      "type": "text"
    },
    "availabilityStatus": {
      "type": "string"
    },
    "isAvailable": {
      "type": "boolean",
      "default": true
    },
    "cvUrl": {
      "type": "string"
    },
    "profileImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "highlights": {
      "type": "component",
      "component": "shared.highlight",
      "repeatable": true
    },
    "socialLinks": {
      "type": "component",
      "component": "shared.social-link",
      "repeatable": true
    }
  }
}

